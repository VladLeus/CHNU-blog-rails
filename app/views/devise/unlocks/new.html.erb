<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "container" }) do |f| %>
  <h2>Resend unlock instructions</h2>
  <%= render "devise/shared/error_messages", resource: resource, class: "form-control" %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Resend unlock instructions", class: "form-control" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
