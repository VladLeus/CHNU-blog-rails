<p style="color: green"><%= notice %></p>

<%= render partial:  "posts/post", locals: { post: @post } %>

<div class="container gap-2 mt-2">
  <div class="d-flex gap-2">
    <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-primary poppins-regular px-2 py-1" %> |
    <%= link_to "Back to posts", posts_path, class: "btn btn-outline-primary poppins-regular text-dark px-2 py-1"%>
  </div>

  <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-outline-danger px-2 py-1 poppins-semibold"%>
</div>
